---
import { Icon } from 'astro-icon/components';
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CurrencyInfo from '../components/CurrencyInfo.astro';
import BetterInput from '../components/BetterInput.astro';
---

<Layout title="InverTech - Gastos Personales" description="InverTech - Gastos Personales">
    <Header></Header>
	<div class="text-white w-full h-[95vh] flex flex-col justify-center items-center bg-gray-600 bg-gradient-to-br from-[#143266] gap-3">
		<h1 class="text-8xl font-bold flex items-center justify-center gap-2">
			<Icon name="fluent:arrow-trending-lines-20-filled"/>
			InverTech
		</h1>
		<p class="text-3xl font-light">Bienvenido</p>
	</div>

    <!-- Definir moneda -->
    <div class="text-black flex justify-center flex-col items-center my-14 gap-5 min-w-[48rem] border rounded-md py-2 px-2">
        <h1 class="text-5xl font-semibold py-2 border-b w-full text-center px-1">Conversor de monedas</h1>
        <section class="flex justify-around items-center w-full">
            <CurrencyInfo
                name="Cantidad"
                currencyName='currencyInfo'>
                <input type="number" class="text-xl px-5 appearance-none outline-none h-full w-full border-b-2" id="moneyInput">
            </CurrencyInfo>
            <Icon name="fluent:arrow-right-12-regular" class="size-8" />
            <CurrencyInfo
                name="Convertida a"
                currencyName='currencyFinal'>
                <p id="displayFinalResult" class="overflow-hidden px-5 border-b-2 h-full w-full text-xl flex justify-start items-center">(Resultado)</p>
            </CurrencyInfo>
        </section>
        <section>
            <p class=" h-6 text-center italic text-lg" id="informativeCurrencyText"></p>
        </section>
    </div>

    <!-- Definir cantidad de personas y gastos (beta) -->
