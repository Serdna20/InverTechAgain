---
import Layout from '../layouts/Layout.astro'; 
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Icon } from 'astro-icon/components';
---

<Layout title="InverTech - Login" description="InverTech - Inicia Sesión">
    <Header></Header>
        <section class="h-[98vh] w-full flex justify-center items-center">
            <div class="max-w-[60%] w-full max-h-[80%] h-full border-2 rounded-2xl flex flex-col justify-center gap-40 items-center">
                <section class="flex flex-col gap-4 justify-center items-center">
                    <h1 class="mt-10 text-3xl font-bold text-center">Inicie Sesión</h1>
                    <h1 class="font-semibold text-2xl">Elija la acción a realizar</h1>
                </section>
                <div class="flex flex-col justify-around items-center max-h-[80%] w-full">
                    <a href="/interesCompuesto" class="max-w-[50%] max-h-[20%] flex flex-row justify-center items-center gap-2 bg-[color:var(--custom-orange)] rounded-2xl p-5 text-white font-semibold">
                        <p class="text-center text-lg">Calcular Interes Compuesto</p>
                        <Icon name="fluent:arrow-right-24-filled" />
                    </a>
                    <a href="/gastosPersonalesNew" class="max-w-[50%] max-h-[20%] flex flex-row justify-center items-center gap-2 bg-[color:var(--custom-orange)] rounded-2xl p-5 text-white font-semibold">
                        <p class="text-center text-lg">Gastos Personales</p>
                        <Icon name="fluent:arrow-right-24-filled" />
                    </a>
                    <!-- <a href="#" class="max-w-[50%] max-h-[20%] flex flex-row justify-center items-center gap-2 bg-[color:var(--custom-orange)] rounded-2xl p-5 text-white font-semibold">
                        <p>Acciones (To Be Done)</p>
                        <Icon name="fluent:arrow-right-24-filled" />
                    </a> -->
                </div>                
            </div>
        </section>
    <Footer></Footer>
</Layout>