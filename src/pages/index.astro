---
import Layout from '../layouts/Layout.astro'; 
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Icon } from 'astro-icon/components';
---

<Layout title="InverTech - Inicio" description="InverTech - Bienvenido">
	<section class="w-full h-screen flex justify-center items-center">
        <section class="w-4/5 max-w-6xl h-4/5 my-14 rounded-md shadow-2xl shadow-slate-300 flex flex-col justify-center items-center">
            <section class="w-full flex justify-center items-center flex-col gap-3 mb-auto">

                <h1 class="flex justify-center items-center rounded-md h-32 rounded-t
                            rounded-b-none w-full text-3xl text-center text-white
                            font-bold bg-[color:var(--custom-d-blue)]">
                            Bienvenido a <span class="flex flex-row gap-1 justify-center items-center pl-3"><Icon name="fluent:arrow-trending-lines-24-filled" />InverTech</span>
                </h1>

                <p class="w-3/5 mt-10 text-lg text-center font-semibold text-slate-600 italic">
                    En esta página web encontrará diversas opciones sobre economía, las cuales le
					permitirán analizar el comportamiento de su dinero en distintos ámbitos,
					utilize el botón a continuación para iniciar
                </p>
            </section>
			<div class="h-3/5 w-full flex justify-center items-center">
				<a href="/userLogin" class="max-w-[50%] max-h-[10%] flex flex-row justify-center items-center gap-2 bg-[color:var(--custom-orange)] p-5 text-white font-semibold">
					<p class="text-center text-lg">Iniciar Sesión</p>
					<Icon name="fluent:arrow-right-24-filled" />
				</a>
			</div>
			
        </section>
    </section>
</Layout>